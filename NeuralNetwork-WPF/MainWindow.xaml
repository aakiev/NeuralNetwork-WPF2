<Window x:Class="NeuralNetwork_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNetwork_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">

    <Grid>
        <Button x:Name="queryButton" Content="Query Network" HorizontalAlignment="Left" Margin="833,277,0,0" VerticalAlignment="Top" Width="115" Click="queryButton_Click" Height="32"/>
        <Button x:Name="trainButton" Content="Train Network" HorizontalAlignment="Left" Margin="1045,131,0,0" VerticalAlignment="Top" Width="121" Height="33" Click="trainButton_Click"/>
        <Button x:Name="createButton" Content="Create Network" HorizontalAlignment="Left" Margin="832,232,0,0" VerticalAlignment="Top" Width="116" Click="createButton_Click" Height="32"/>
        <TextBox x:Name="outputTextBox" HorizontalAlignment="Left" Height="24" Margin="842,191,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="98" PreviewTextInput="outputTextBox_PreviewTextInput" IsEnabled="False"/>
        <TextBox x:Name="hiddenTextBox" HorizontalAlignment="Left" Height="24" Margin="842,139,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="98" PreviewTextInput="hiddenTextBox_PreviewTextInput"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="24" Margin="842,87,0,0" TextWrapping="Wrap" Text="784" VerticalAlignment="Top" Width="98" PreviewTextInput="inputTextBox_PreviewTextInput" IsEnabled="False"/>
        <TextBox x:Name="TextBox_LearningRate" HorizontalAlignment="Left" Height="24" Margin="842,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" Text="0.1" TextChanged="TextBox_LearningRate_TextChanged" PreviewTextInput="TextBox_LearningRate_PreviewTextInput" LostFocus="TextBox_LearningRate_LostFocus" GotFocus="TextBox_LearningRate_GotFocus"/>

        <Button x:Name="openTrainButton" Content="Open Training File" HorizontalAlignment="Left" Margin="1045,24,0,0" VerticalAlignment="Top" Width="121" Click="openTrainButton_Click" Height="33"/>
        <Button x:Name="loadWeightButton" Content="Load Weight Matrices" HorizontalAlignment="Left" Margin="1045,179,0,0" VerticalAlignment="Top" Width="121" Click="loadWeightButton_Click" Height="35" FontSize="11"/>
        <Button x:Name="openTestButton" Content="Open Test File" HorizontalAlignment="Left" Margin="1045,227,0,0" VerticalAlignment="Top" Width="121" Click="openTestButton_Click" Height="34"/>


        <DataGrid x:Name="networkDataGrid" 
          CanUserAddRows="True" 
          ItemsSource="{Binding newRow}" 
          HorizontalAlignment="Left" 
          Height="602" 
          Margin="10,10,0,0" 
          VerticalAlignment="Top" 
          Width="800" 
          AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Input Layer" Binding="{Binding inputValue}" Width="*"/>
                <DataGridTextColumn Header="Input - Hidden Layer" Binding="{Binding inputHidden}" Width="*"/>
                <DataGridTextColumn Header="Output - Hidden Layer" Binding="{Binding outputHidden}" Width="*"/>
                <DataGridTextColumn Header="Input - Output Layer" Binding="{Binding inputOutput}" Width="*"/>
                <DataGridTextColumn Header="Output Layer" Binding="{Binding outputLayer}" Width="*"/>
                <DataGridTextColumn Header="Target" Binding="{Binding target}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Learning Rate" HorizontalAlignment="Left" Margin="848,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615" Height="27" Width="108"/>
        <Label Content="Input Nodes" HorizontalAlignment="Left" Margin="849,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615" Height="27" Width="99"/>
        <Label Content="Hidden Nodes" HorizontalAlignment="Left" Margin="846,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615" Height="27" Width="92"/>
        <Label Content="Output Nodes" HorizontalAlignment="Left" Margin="846,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615" Height="27" Width="112"/>

        <TextBox x:Name="epochenBox" HorizontalAlignment="Left" Height="24" Margin="1058,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" Text="1" TextChanged="epochenBox_TextChanged" PreviewTextInput="epochenBox_PreviewTextInput" />
        <Label Content="Epochen" HorizontalAlignment="Left" Margin="1075,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615" Height="27" Width="108"/>

        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="237" Margin="849,344,0,0" Stroke="Black" VerticalAlignment="Top" Width="307"/>
        <Image x:Name="numberImage" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" MinWidth="100" MinHeight="100" Margin="853,348,42,84"/>
        <TextBox x:Name="performanceBox" HorizontalAlignment="Left" Height="24" Margin="1057,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" TextChanged="TextBox_LearningRate_TextChanged" PreviewTextInput="TextBox_LearningRate_PreviewTextInput" LostFocus="TextBox_LearningRate_LostFocus" GotFocus="TextBox_LearningRate_GotFocus" IsEnabled="False"/>
        <Label Content="Network Performance" HorizontalAlignment="Left" Margin="1044,270,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615" Height="27" Width="131"/>
        <CheckBox x:Name="checkBoxImage" Content="ShowImages" HorizontalAlignment="Left" Margin="851,593,0,0" VerticalAlignment="Top" Height="19" Width="97"/>
        <TextBox x:Name="recognizedBox" HorizontalAlignment="Left" Height="23" Margin="1058,589,0,0" TextWrapping="Wrap" Text="?" VerticalAlignment="Top" Width="92"/>
        <Label Content="Recognized" HorizontalAlignment="Left" Margin="1067,607,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615"/>



    </Grid>
</Window>
